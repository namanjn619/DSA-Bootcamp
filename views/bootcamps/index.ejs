<%- layout('layouts/boilerplate') %>
    <h1>All Bootcamps : </h1>
    <div class="card mb-5">
        <a class="btn btn-dark" href="/bootcamps/new">Create a New Question</a>
    </div>
    
    <% for (let bootcamp of bootcamps) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-8 offset-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= bootcamp.title %>
                        </h5>
                        <p class="card-text">
                            <%= bootcamp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <strong>Topic : </strong>
                                <%= bootcamp.topic %>
                            </small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <strong>Difficulty : </strong><%= bootcamp.difficulty %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/bootcamps/<%=bootcamp._id%>">View <%= bootcamp.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>
